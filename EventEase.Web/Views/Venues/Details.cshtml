@model EventEase.Web.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4>@Model.VenueName</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VenueName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VenueName)</dd>
                            
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Location)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>
                            
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Capacity)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.VenueName" class="img-fluid" />
                        }
                        else
                        {
                            <div class="alert alert-info">No image available</div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div> 