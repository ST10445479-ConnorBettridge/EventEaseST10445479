@model EventEase.Web.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this venue?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4>@Model.VenueName</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.VenueName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.VenueName)</dd>
                            
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Location)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>
                            
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Capacity)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.VenueName" style="max-width: 200px; max-height: 200px;" />
                        }
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="VenueId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                {
                    <div class="alert alert-danger mt-3">
                        @ViewData["ErrorMessage"]
                    </div>
                }
            </div>
        </div>
    </div>
</div> 